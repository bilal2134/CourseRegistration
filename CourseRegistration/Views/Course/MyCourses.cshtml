@model IEnumerable<global::CourseRegistration.Models.Course>
@{
    ViewData["Title"] = "My Courses";
    Layout = "_Layout";

}

<h2>Courses You Are Registered For</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Instructor</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.Instructor</td>
                <td>
                    <a href="@Url.Action("Details", "Course", new { id = course.Id })" class="btn btn-info btn-sm">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
