@model global::CourseRegistration.Models.Course
@{
    ViewData["Title"] = "Edit Course";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>Edit Course</h2>

<form asp-action="EditCourse" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="Name">Course Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" id="Description" name="Description">@Model.Description</textarea>
    </div>
    <div class="form-group">
        <label for="Instructor">Instructor</label>
        <input type="text" class="form-control" id="Instructor" name="Instructor" value="@Model.Instructor" />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</for>
